{
  "name": "lmstudio-ui",
  "version": "0.0.0",
  "scripts": {
    "start": "npm run db:init && ng build && node ./dist/lmstudio-ui/server/server.mjs",
    "build": "ng build",
    "watch": "ng build --watch",
    "test": "ng test",
    "server": "node ./dist/lmstudio-ui/server/server.mjs",
    "server:watch": "nodemon --watch dist/lmstudio-ui/server --ext js,mjs,json --exec \"node ./dist/lmstudio-ui/server/server.mjs\"",
    "reload:watch": "browser-sync start --proxy http://localhost:4000 --files ",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:init": "drizzle-kit generate && drizzle-kit migrate",
    "dev": "npm run db:init && concurrently \"npm run watch\" \"npm run server:watch\""
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-server": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@angular/ssr": "^21.0.3",
    "@asteasolutions/zod-to-openapi": "^8.4.0",
    "@ngxs/devtools-plugin": "^21.0.0",
    "@ngxs/hmr-plugin": "21.0.0",
    "@ngxs/logger-plugin": "^21.0.0",
    "@ngxs/router-plugin": "^21.0.0",
    "@ngxs/storage-plugin": "^21.0.0",
    "@ngxs/store": "^21.0.0",
    "better-sqlite3": "^12.6.0",
    "clipboard": "^2.0.11",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "express": "^5.1.0",
    "marked": "^17.0.1",
    "ngx-markdown": "^21.0.1",
    "prismjs": "^1.30.0",
    "rxjs": "~7.8.0",
    "swagger-ui-express": "^5.0.1",
    "tslib": "^2.3.0",
    "zod": "^4.3.5",
    "zod-openapi": "^5.4.6"
  },
  "devDependencies": {
    "@angular/build": "^21.0.3",
    "@angular/cli": "^21.0.3",
    "@angular/compiler-cli": "^21.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.1",
    "@types/node": "^20.17.19",
    "@types/prismjs": "^1.26.5",
    "@types/swagger-ui-express": "^4.1.8",
    "browser-sync": "^3.0.4",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^27.1.0",
    "nodemon": "^3.1.11",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}
